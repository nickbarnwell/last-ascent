---
pageable: false
per_page: 10
layout: blog
---
.container.post-listing
  - page_articles.each do |article|
    - (1..3).each do |i|
      %article.post
        %h1.post-title= link_to article.title, article
        %hgroup.post-info
          .post-metadata
            %ul.post-tags
              - article.tags.map do |t| 
                %li.post-tag= link_to t, tag_path(t)
            %p.post-date= article.date.stamp("5. September 2013")
        .post-summary.post-body
          = article.summary
          - if article.summary != article.body
            = link_to 'Read On&hellip;', article, :class => 'post-read-more'

  - if paginate && num_pages > 1
    %nav.pagination
      - if prev_page
        = link_to 'previous', prev_page, :class => 'page-control prev'
      - else
        = link_to 'previous', '#', :class => 'page-control prev disabled'
      %span.pager= "#{page_number} of #{num_pages}"
      - if next_page
        = link_to 'next', next_page, :class => 'page-control next'
      - else
        = link_to 'next', '#', :class => 'page-control next disabled'
