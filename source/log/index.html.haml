---
pageable: false
layout: blog
---
.container.post-listing
  - page_articles.each do |article|
    = partial "partials/article", locals: {article: article}
  - if paginate && num_pages > 1
    %nav.pagination.post
      - if prev_page
        = link_to 'previous', prev_page, :class => 'page-control prev'
      - else
        = link_to 'previous', '#', :class => 'page-control prev disabled'
      %span.pager= "#{page_number} of #{num_pages}"
      - if next_page
        = link_to 'next', next_page, :class => 'page-control next'
      - else
        = link_to 'next', '#', :class => 'page-control next disabled'
